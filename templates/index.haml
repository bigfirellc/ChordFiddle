!!! html5

%html{ lang: "en" }

%head
  %meta{ charset: "utf-8" }
  %title = package.name
  %meta{ name: "description", content: package.description }
  %meta{ name: "keywords", content: package.keywords.join(", ") }
  %link{ rel: "stylesheet", href: "bundle.css?v=#{cssLastModified}" }

%body
  %header
    .wrapper
      %h1.site-name
        %a{ href: "" } = package.name
      %ul.meta
        %li Version #{package.version}
        %li
          Built with
          #{' '}
          %a{ href: "https://github.com/martijnversluis/ChordSheetJS", target: "_blank" }
            ChordSheetJS
          #{' '}
          and
          #{' '}
          %a{ href: "https://github.com/martijnversluis/ChordJS", target: "_blank" }ChordJS
        %li
          %a{ href: package.homepage, target: "_blank" }GitHub
        %li
          %a{ href: package.bugs.url, target: "_blank" }Issues
        %li
          %a{ href: "#readme" }About
  %main
    .columns
      %section.column.column-left
        %ul.mod-toolbar
          %li
            %button{ data-id: "transpose-down" }Transpose down
          %li
            %button{ data-id: "transpose-up" }Transpose up
          %li
            %button{ data-id: "switch-to-sharp" }Use ♯
          %li
            %button{ data-id: "switch-to-flat" }Use ♭
        %textarea.sheet-editor.active{ data-id: "chordProEditor" } = exampleChordProSheet
      %section.column.column-right
        %ul.mod-radio-group
          %li
            %input{ checked: true, data-id: "view-type-plain", id: "view-type-plain", name: "view_type", type: "radio", value: "plain" }
            %label{ for: "view-type-plain" }Text
          %li
            %input{ data-id: "view-type-html", id: "view-type-html", name: "view_type", type: "radio", value: "html" }
            %label{ for: "view-type-html" }HTML
        %textarea.sheet-editor.active{ data-id: "chordSheetTextViewer", readonly: true }
        .sheet-viewer.mod-html-preview{ data-id: "chordSheetHTMLViewer" }
  %section.mod-modal.mod-readme#readme
    %a.close{ href: "#" }&times;
    .contents != readmeHTML
  %script{ src: "bundle.js?v=#{jsLastModified}" }

  :javascript
    if (window.location.hostname == 'martijnversluis.github.io') {
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-105335431-1', 'auto');
      ga('send', 'pageview');
    }
